<Window x:Class="ConwayGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConwayGameOfLife"
        mc:Ignorable="d"
        Title="Conway Game Of Life" Height="525" Width="750">
    <Grid Name="gridConwayGame" Width="700" Height="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">       
            <Button x:Name="btn_Pause" Content="Pause" Margin="10" Click="btn_Pause_Click"/>
            <Button x:Name="btn_Clear" Content="Clear" Margin="10,0,10,10" Click="btn_Clear_Click"/>
            <TextBlock Height="35" Margin="10" Text="Click on the board to make a life or to kill it." TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
